<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/engineRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:minHeight="60dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/engineStart"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_drag"
        android:layout_marginStart="4dp"/>

    <ImageView
        android:id="@+id/engineIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@id/engineStart"
        app:layout_constraintStart_toEndOf="@id/engineStart"
        app:layout_constraintTop_toTopOf="@id/engineStart" />

    <TextView
        android:id="@+id/engineName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/engineIcon"
        app:layout_constraintStart_toEndOf="@id/engineIcon"
        app:layout_constraintTop_toTopOf="@id/engineIcon"
        tools:text="微信" />

</androidx.constraintlayout.widget.ConstraintLayout>